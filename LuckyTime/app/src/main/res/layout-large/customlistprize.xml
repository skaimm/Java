<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_prizesponsor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroundtext">
                    <ImageView
                        android:id="@+id/iv_prizepic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_user" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/backgroundprizetext"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_prizename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:textSize="20sp"
                    android:text="IPHONE X 2056"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/endRed"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_prizekatilim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_participation"
                        android:drawableLeft="@drawable/ic_participation"
                        android:drawablePadding="10dp"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_prizeprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_rip"
                        android:drawableLeft="@drawable/ic_rip"
                        android:drawablePadding="10dp"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <Button
                    android:id="@+id/btn_prizekatil"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
