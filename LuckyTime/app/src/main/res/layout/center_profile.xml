<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="110dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/background_gradient"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_userphoto"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    ads:civ_border_color="@color/startRed"
                    ads:civ_border_width="1dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="left"
                        android:layout_marginVertical="3dp"
                        android:text="Samet KocabaÅŸ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawablePadding="5dp"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_iban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:drawableStart="@drawable/ic_ibanno"
                        android:drawableLeft="@drawable/ic_ibanno"
                        android:drawablePadding="5dp"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:background="@color/white"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal"
                android:id="@+id/ripizlemelin">
                <TextView
                    android:id="@+id/tv_tl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_tl"
                    android:drawableLeft="@drawable/ic_tl"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="5dp"
                    android:textSize="15sp"
                    android:ems="8"
                    android:paddingVertical="15dp"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tv_rip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_rip"
                    android:drawableLeft="@drawable/ic_rip"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="15dp"
                    android:textSize="15sp"
                    android:ems="8"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_adwatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_izleme"
                    android:drawableLeft="@drawable/ic_izleme"
                    android:drawablePadding="2dp"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="5dp"
                    android:ems="8"
                    android:textSize="15sp"

                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ripizlemelin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_goldbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_altinsandik" />

                        <TextView
                            android:id="@+id/tv_infogb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/goldinfo"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tv_gbcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_silverbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_gumussandik" />

                        <TextView
                            android:id="@+id/tv_infosb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/silverinfo"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tv_sbcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_bronzbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_bronzsandik" />

                        <TextView
                            android:id="@+id/tv_infobb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/bronzinfo"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tv_bbcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background_signup"
                    android:text="@string/buttonpromotion"
                    android:layout_gravity="center"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="90dp"
                    android:paddingHorizontal= "10dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/linpromotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_iban"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/background_signup"
                        android:text="@string/buttoniban"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="3dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btn_paracek"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/background_signup"
                        android:text="@string/withdrawel"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="30dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progressbar"/>

</RelativeLayout>
